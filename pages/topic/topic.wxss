.container {
  height: 100%;
}
.topic-container{
  background-color: #fff;
}

.topic-common-list {
   padding: 48rpx 0rpx 48rpx 48rpx; 
   margin: 0 auto;
}

.list-item {
  position: relative;
  float: left;
  overflow: hidden;
  width: 300rpx;
  margin-bottom: 15rpx;
  margin-right: 48rpx;
  background: #fff;
}

.list-item  image.cover {
  width: 300rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.content-title {
  padding: 3rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-title text {
  font-size: 30rpx;
  line-height: 15rpx;
  color: #1b1b1b;
}

.content-brief {
  padding: 0rpx 0rpx 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}
.topic-name {
 float: left; 
 width: 100%;
 overflow: auto;
 margin-top: -15rpx;
}

.img-menu {
  width: 80rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 12rpx;
  position: absolute;
  float: right; 
  z-index: 1000;
  top: 10rpx;
  right: 10rpx;
}