
.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}
/*topic list*/

.topic-list-item {
  position: relative;
  overflow: hidden;
  clear: both;
  margin-bottom: 30rpx;
  background: #fff;
}
.search {
  color: #8b4bbb;
}

.topic-list-item  image.cover {
  width: 100%;
  height: 375rpx;
  filter: blur(4px);
}

.topic-content-title {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 120rpx;
}

.topic-content-title text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.topic-content-title-line{
  width: 65px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff; 
  z-index: 2;
  left: 64rpx;
  top: 180rpx;
}
.posts-count {
  z-index: 3;
  position: absolute;
  font-size: 34rpx;
  left: 60rpx;
  top: 285rpx;
  color: #fff;
}
.topic-content-brief {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 240rpx;
}

.topic-content-brief text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #fff;
}

.searchKey {
  color: #ffa400;
}